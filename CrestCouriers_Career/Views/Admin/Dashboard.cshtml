@model IEnumerable<CrestCouriers_Career.Models.Order>
@using Microsoft.AspNetCore.Identity
@using CrestCouriers_Career.Models
@inject SignInManager<Account> SignInManager
@inject UserManager<Account> UserManager
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_SystemAdmin.cshtml";
}

@section AdminMenu{
    <ul class="menu-ul">
        <a asp-controller="Admin" asp-action="Dashboard" class="menu-option-link">
            <div class="panel-option-active">
                <li><h5>Dashboard</h5></li>
            </div>
        </a>
        <a asp-controller="Admin" asp-action="Order" class="menu-option-link">
            <div class="panel-option">
                <li><h5>Order</h5></li>
            </div>
        </a>
        <a asp-controller="Admin" asp-action="AdminSetting" class="menu-option-link">
            <div class="panel-option">
                <li><h5>Admin setting</h5></li>
            </div>
        </a>
        <a asp-controller="Admin" asp-action="AdminAccounts" class="menu-option-link">
            <div class="panel-option">
                <li><h5>Admin accounts</h5></li>
            </div>
        </a>
        <a asp-controller="Admin" asp-action="UserAccounts" class="menu-option-link">
            <div class="panel-option">
                <li><h5>User accounts</h5></li>
            </div>
        </a>
    </ul>
}

<div class="list-title">
    <div class="list-title-item">
        <h5 class="list-title-item-text">
            Order date
        </h5>
    </div>

    <div class="list-title-item">
        <h5 class="list-title-item-text">
            Origin
        </h5>
    </div>

    <div class="list-title-item">
        <h5 class="list-title-item-text">
            Destination
        </h5>
    </div>

    <div class="list-title-item">
        <h5 class="list-title-item-text">
            ReceiveDate
        </h5>
    </div>

    <div class="list-title-item">
        <h5 class="list-title-item-text">
            DeliveryDate
        </h5>
    </div>

    <div class="list-title-item">
        <h5 class="list-title-item-text">
            CarType
        </h5>
    </div>

    <div class="list-title-item">
        <h5 class="list-title-item-text">
            Userid
        </h5>
    </div>

    <div class="list-title-item">
        <h5 class="list-title-item-text">
            Price
        </h5>
    </div>

    <div class="list-title-item">
        <h5 class="list-title-item-text">
            State
        </h5>
    </div>
</div>

<hr style="width:90%; border-color:red;">

@foreach (var item in Model)
{
    using (Html.BeginForm("Delete", "User", new { id = item.OrderId }))
    {

        <div class="list-order">

            <div class="list-title-item">
                <p>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </p>
            </div>

            <div class="list-title-item">
                <p>
                    @Html.DisplayFor(modelItem => item.Origin)
                </p>
            </div>

            <div class="list-title-item">
                <p>
                    @Html.DisplayFor(modelItem => item.Destination)
                </p>
            </div>

            <div class="list-title-item">
                <p>
                    @Html.DisplayFor(modelItem => item.CollectionDate)
                </p>
            </div>

            <div class="list-title-item">
                <p>
                    @Html.DisplayFor(modelItem => item.DeliveryDate)
                </p>
            </div>

            <div class="list-title-item">
                <p>
                    @Html.DisplayFor(modelItem => item.CarType)
                </p>
            </div>

            <div class="list-title-item">
                <p>

                    @Html.DisplayFor(modelItem => item.Account.UserName)
                </p>
            </div>

            <div class="list-title-item">
                <p>
                    @Html.DisplayFor(modelItem => item.Price)
                </p>
            </div>

            <div class="list-title-item">
                <p>
                    @Html.DisplayFor(modelItem => item.State)
                </p>
            </div>

            @*data-toggle="modal" data-target=".confirmbox-delete"*@
            <div class="list-record-button">
                <button type="submit" style="background-color:transparent; border:none;" asp-controller="Admin" asp-action="Delete" asp-route-id="@item.OrderId"><img src="~/img/System/remove.png" width="35px" height="35px" alt=""></button>
            </div>

            <div class="list-record-button" data-toggle="modal" data-target=".confirmbox" onclick="getValues('@item.OrderId','@item.Origin','@item.Destination','@item.CollectionDate','@item.DeliveryDate','@item.CarType')">
                <button asp-controller="Admin" asp-action="Edit" asp-route-id="@item.OrderId" style="background-color:transparent; border:none;">
                    <img src="~/img/System/edit.png" width="35px" height="35px" alt="">
                </button>
            </div>

        </div>

    }
}

<div id="confirmbox-delete" class="modal fade confirmbox-delete">
    <div class="modal-dialog">
        <div class="modal-content" style="width:600px; padding:0px;">

            <div class="modal-header" style="border-bottom-color:red;">
                <h2 class="update-box-header">Delete order</h2>
            </div>

            <div class="modal-body">




                <div class="popup-admin-deactive">

                    <div class="NewOrder-form">

                        <div class="row">

                            <div class="col-sm-12">
                                <div class="order-input">
                                    <p>Are you sure? You realy want to delete this order?</p>
                                </div>
                            </div>

                        </div>

                        <div class="row">

                            <div class="col-sm-6">
                                <div class="input-submit">
                                    <button type="button" class="book-now-btn" style="color:white; padding-top:14px; float:right;" name="button"><h5>Delete</h5></button>
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="input-submit">
                                    <button type="button" class="book-now-btn" style="color:white; padding-top:14px; float:left;" name="button"><h5>Cancel</h5></button>
                                </div>
                            </div>

                        </div>

                    </div>

                </div>

            </div>


        </div>
    </div>
</div>

