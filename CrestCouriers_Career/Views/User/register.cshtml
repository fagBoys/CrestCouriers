@model CrestCouriers_Career.Models.User;
@using Microsoft.Extensions.Options
@using reCAPTCHA.AspNetCore;

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <title></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/bootstrap2.min.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/systemstyle.css" />
</head>
<body style="height:auto;">
    <div class="container">
        <div class="row login-row-style">
            <div class="col-lg-4 login-image">
                <img src="~/img/System/Courier-blog-header-image.png" class="login-image-style" alt="">
            </div>

            <div class="col-lg-8 login-form-area">
                <form asp-controller="User" asp-action="register" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="login-logo-location">
                            <img src="~/img/System/logo-black.png" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-div-location-right">
                            <input asp-for="FirstName" class="form-control2" name="" placeholder="Firstname">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="input-div-location-left">
                            <input asp-for="LastName" class="form-control2" name="" placeholder="Lastname">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-div-location-right">
                            <input asp-for="UserName" style="margin:0;" class="form-control2" name="" placeholder="Username">
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="input-div-location-left">
                            <input asp-for="Password" style="margin:0;" class="form-control2" name="" placeholder="Password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-div-location-right">
                            <input asp-for="PhoneNumber" class="form-control2" name="" placeholder="Phone number">
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="input-div-location-left">
                            <input asp-for="EmailAddress" class="form-control2" name="" placeholder="Email address">
                            <span asp-validation-for="EmailAddress" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="button-div-location">
                            <button type="submit" class="book-now-btn" style="" name="button">Register</button>
                        </div>
                    </div>

                    <div class="additional-text">
                        <a class="login-single-text" asp-controller="User" asp-action="register"><h6>Forgot Password</h6></a>
                        <a class="login-single-text" asp-controller="Home" asp-action="Index"><h6>Back to website</h6></a>
                    </div>
                </form>

            </div>

        </div>
    </div>








    
</body>
</html>
