@model CrestCouriers_Career.Models.User

@{
    ViewData["Title"] = "User";
    Layout = "~/Views/Shared/_System.cshtml";
}

@section UserMenu{
    <ul class="menu-ul">
        <a asp-controller="User" asp-action="Dashboard" class="menu-option-link">
            <div class="panel-option">
                <li><h5>Dashboard</h5></li>
            </div>
        </a>
        <a asp-controller="User" asp-action="Order" class="menu-option-link">
            <div class="panel-option">
                <li><h5>Order</h5></li>
            </div>
        </a>
        <a asp-controller="User" asp-action="User" class="menu-option-link">
            <div class="panel-option-active">
                <li><h5>User</h5></li>
            </div>
        </a>
    </ul>
}

<div class="NewOrder-form" style="margin:100px;">

    <form asp-controller="User" asp-action="User" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">

            <div class="col-sm-6">
                <input asp-for="UserName" placeholder="Username" value="@ViewData["myuser-Username"]">
                <span class="text-danger field-validation-valid" data-valmsg-for="Subject" data-valmsg-replace="true"></span>
            </div>

            <div class="col-sm-6">
                <input asp-for="Password" placeholder="Password" value="@ViewData["myuser-Password"]">
            </div>

        </div>

        <div class="row">

            <div class="col-sm-6">
                <div class="order-input">
                    <input asp-for="FirstName" placeholder="Firstname" value="@ViewData["myuser-Firstname"]">
                </div>
            </div>

            <div class="col-sm-6">
                <div class="order-input">
                    <input asp-for="LastName" placeholder="Lastname" value="@ViewData["myuser-Lastname"]">
                </div>
            </div>

        </div>

        <div class="row">

            <div class="col-sm-6">
                <div class="order-input">
                    <input asp-for="PhoneNumber" placeholder="Phone number" value="@ViewData["myuser-PhoneNumber"]">
                </div>
            </div>

            <div class="col-sm-6">
                <div class="order-input">
                    <input asp-for="EmailAddress" placeholder="Email address" value="@ViewData["myuser-EmailAddress"]">
                </div>
            </div>

        </div>

        <div class="row">

            <div class="col-sm-12">
                <div class="input-submit">
                    <button type="submit" class="book-now-btn" style="color:white; padding-top:14px;" name="button"><h5>Update your information</h5></button>
                </div>
            </div>

        </div>
    </form>

</div>

