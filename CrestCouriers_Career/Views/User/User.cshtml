@model CrestCouriers_Career.Models.User

@{
    ViewData["Title"] = "User";
    Layout = "~/Views/Shared/_System.cshtml";
}


    <div class="NewOrder-form"  style="margin:100px;">
        <form asp-action="User">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">

                <div class="col-sm-6">
                    <input asp-for="UserName" class="" name="" placeholder="Username">
                    <span class="text-danger field-validation-valid" data-valmsg-for="Subject" data-valmsg-replace="true"></span>
                </div>

                <div class="col-sm-6">
                    <input asp-for="Password" name="" placeholder="Password">
                </div>

            </div>

            <div class="row">

                <div class="col-sm-6">
                    <div class="order-input">
                        <input asp-for="FirstName" name="" placeholder="Fristname">
                    </div>
                </div>

                <div class="col-sm-6">
                    <div class="order-input">
                        <input asp-for="LastName" name="" placeholder="Lastname">
                    </div>
                </div>

            </div>

            <div class="row">

                <div class="col-sm-6">
                    <div class="order-input">
                        <input asp-for="PhoneNumber" name="" placeholder="Phone number">
                    </div>
                </div>

                <div class="col-sm-6">
                    <div class="order-input">
                        <input asp-for="EmailAddress" name="" placeholder="Email address">
                    </div>
                </div>

            </div>

            <div class="row">

                <div class="col-sm-12">
                    <div class="input-submit">
                        <button type="submit" class="book-now-btn" style="color:white; padding-top:14px;" name="button"><h5>Update your information</h5></button>
                    </div>
                </div>

            </div>
        </form>
    </div>


